@page "/"

<PageTitle>Index</PageTitle>
@if (userFavoriteMovies?.Any() ?? false)
{
    <h2>Favorite Movies</h2>
    <div class="container">

        @if (userFavoriteMovies is not null)
        {
            <div class="row gy-3">
            @foreach(var movie in userFavoriteMovies)
            {
                    <MovieDetails Movie="movie" OnRemoveFavoriteMovie="RemoveFavoriteMovie" />
            }
            </div>
        }
    </div>
}

